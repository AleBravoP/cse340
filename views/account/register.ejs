<%- contentFor('body') %>

<h1><%= title %></h1>

  <!-- Flash message -->
  <% if (flash && flash.message) { %>
    <p class="flash-message"><%= flash.message %></p>
  <% } %>

  <div id="register">
    <form action="/account/register" method="post">
        <label for="fname">First name:</label>
        <input type="text" id="fname" name="account_firstname" required>

        <label for="lname">Last name:</label>
        <input type="text" id="lname" name="account_lastname" required>

        <label for="email">Email address:</label>
        <input type="email" id="email" name="account_email" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()_+])[A-Za-z\d!@#$%^&*()_+]{12,}$" required>

        <button type="submit">REGISTER</button>
    </form>
  
    <p>Have an account? <a href="/account/login" title="Login">Login here</a></p>
</div>