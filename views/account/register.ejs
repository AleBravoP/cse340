<%- contentFor('body') %>

<h1><%= title %></h1>

  <!-- Flash message -->
  <% if (flash && flash.message) { %>
    <p class="flash-message"><%= flash.message %></p>
  <% } %>

  <div id="register">
    <form action="/account/register" method="post">
        <label for="fname">First name:</label>
        <input type="text" id="fname" name="account_firstname" required>

        <label for="lname">Last name:</label>
        <input type="text" id="lname" name="account_lastname" required>

        <label for="email">Email address:</label>
        <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address" required>

        <label for="password">Password:</label>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>

        <button type="submit">REGISTER</button>
    </form>
  
    <p>Have an account? <a href="/account/login" title="Login">Login here</a></p>
</div>