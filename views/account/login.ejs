<%- contentFor('body') %>

<h1><%= title %></h1>

<!-- Flash message -->
<% if (flash && flash.notice && flash.notice !== "This is a flash message.") { %>
  <p class="flash-message"><%= flash.notice %></p>
<% } %>

  <div id="login">
    <form action="/login" method="post">
        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required>

        <label for="password">Password:</label>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>

        <button type="submit">LOGIN</button>
    </form>
  
    <p>Don't have an account? <a href="/account/register" title="Register">Register here</a></p>
</div>
