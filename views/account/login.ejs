<%- contentFor('body') %>

<h1><%= title %></h1>

  <!-- Flash message -->
  <% if (flash && flash.message) { %>
    <p class="flash-message"><%= flash.message %></p>
  <% } %>

  <div id="login">
    <form action="/login" method="post">
        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" required>

        <button type="submit">LOGIN</button>
    </form>
  
    <p>Don't have an account? <a href="/account/register" title="Register">Register here</a></p>
</div>
